<%- include('partials/header') -%>



<main class="flex-5/6 mx-auto overflow-y-auto  py-20">
  <div class="lg:w-1/3 flex flex-col ml-auto mr-auto gap-4 sm:w-5/6">
    <% for (let i = 0; i < posts.length; i++) { %>
      <a href="/post/<%= posts[i]._id %>" class="blockmax-h-screen w-1/1 rounded overflow-hidden group">
        <h3 class="font-semibold text-lg">
                <div class="avatar">
                  <div class="w-10 rounded-full ">
                    <img src="<%= posts[i].user.image %>" alt="User avatar" />
                  </div>
                </div>
                <%= posts[i].user.userName %>
              </h3>
        <% if (posts[i].type === 'video') { %>
  <video controls class="w-full rounded-lg">
    <source src="<%= posts[i].image %>" type="video/mp4">
    Your browser does not support the video tag.
  </video>
<% } else { %>
  <img src="<%= posts[i].image %>" alt="Post image" class="w-full rounded-lg object-cover max-h-[80vh]" />
<% } %>
      </a>
    <% } %>
  </div>
</main>

<script type="text/javascript" src="video.js"></script>

<%- include('partials/footer') -%>