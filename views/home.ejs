<%- include('partials/header') %>

    <h1 class="text-3xl font-bold mb-6 text-center">Latest Thrift Flips</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% projects.forEach(project=> { %>
            <div class="card bg-base-200 shadow-md">
                <figure>
                    <img src="<%= project.afterImg || 'https://placehold.co/400x300?text=No+Image' %>" alt="After photo"
                        class="w-full h-48 object-cover">
                </figure>
                <div class="card-body">
                    <h2 class="card-title">
                        <%= project.title %>
                    </h2>
                    <p>
                        <%= project.description.substring(0, 100) %>...
                    </p><!-- first hunnit characters -->
                    <div class="mt-2">
                        <% project.tags.forEach(tag=> { %>
                            <span class="badge badge-neutral mr-1">#<%= tag %></span>
                            <% }) %>
                    </div>
                    <div class="card-actions justify-end mt-4">
                        <a href="/projects/<%= project._id %>" class="btn btn-sm btn-accent">View</a>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>

    <%- include('partials/footer') %>