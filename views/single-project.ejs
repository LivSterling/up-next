<%- include('partials/header') %>

<div class="max-w-4xl mx-auto bg-base-200 p-6 rounded shadow-md">
  <h1 class="text-3xl font-bold mb-4"><%= project.title %></h1>

  <div class="grid md:grid-cols-2 gap-4 mb-6">
    <div>
      <p class="font-semibold mb-2">Before</p>
      <img src="<%= project.beforeImg || 'https://placehold.co/400x300?text=Before' %>" alt="Before" class="w-full h-auto rounded">
    </div>
    <div>
      <p class="font-semibold mb-2">After</p>
      <img src="<%= project.afterImg || 'https://placehold.co/400x300?text=After' %>" alt="After" class="w-full h-auto rounded">
    </div>
  </div>

  <div class="mb-4">
    <p class="text-lg"><%= project.description %></p>
  </div>

  <div class="mb-4">
    <% project.tags.forEach(tag => { %>
      <span class="badge badge-outline mr-2">#<%= tag %></span>
    <% }) %>
  </div>

  <% if (project.createdBy) { %>
    <p class="text-sm text-gray-500">Posted by <%= project.createdBy.username || 'Unknown user' %></p>
  <% } %>
</div>

<%- include('partials/footer') %>